<Window x:Class="PracticalWork7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа №7" Height="400" Width="500"
        Background="#B2F2BB">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock Text="Практическая №7" FontSize="15" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            
            <TextBlock Text="Выберите задание 1-30" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            
            <TextBox x:Name="TaskNumberInput" Width="100" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            
            <Button Content="Выбрать задачу" Width="120" HorizontalAlignment="Center" Click="SelectTaskButton_Click" Margin="0,0,0,10"/>


            <StackPanel x:Name="InputFieldsPanel" Margin="0,10,0,10"/>


            <Button Content="Решить" Width="100" HorizontalAlignment="Center" Click="SolveButton_Click" Margin="0,0,0,10"/>

            
            <TextBlock x:Name="ResultText" HorizontalAlignment="Center" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>